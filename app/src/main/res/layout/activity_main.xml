<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.google.android.material.slider.Slider
        android:id="@+id/slider_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/gradient_background"
        android:stepSize="1.0"
        android:value="0.0"
        android:valueFrom="0.0"
        android:valueTo="6.0"
        app:haloRadius="15dp"
        app:thumbRadius="10dp"
        app:tickVisible="false"
        app:trackColor="@color/trans" />

    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/seekbar_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:max="6"
        android:min="0"
        android:thumb="@drawable/ic_baseline_adb_24_green" />

    <TextView
        android:id="@+id/textview_seekbar_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="SeekBar Progress" />

    <Button
        android:id="@+id/decreaseSeekbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-" />

    <Button
        android:id="@+id/increaseSeekbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+" />
</LinearLayout>